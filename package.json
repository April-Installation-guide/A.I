{
  "name": "mancy-discord-bot",
  "version": "3.0.0",
  "description": "Bot de Discord con IA (Groq), memoria persistente, búsqueda de conocimiento, API REST y panel web",
  "type": "module",
  "main": "bot.js",  // ✅ Cambiado a bot.js
  "scripts": {
    "start": "node bot.js",  // ✅ Cambiado a bot.js
    "dev": "nodemon bot.js",  // ✅ Usa nodemon para desarrollo
    "prod": "node bot.js",    // ✅ Script explícito para producción
    "dev:debug": "node --inspect bot.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "docker:build": "docker build -t mancy-bot ."
  },
  "dependencies": {
    "axios": "^1.7.7",
    "discord.js": "^14.16.3",
    "express": "^4.21.1",
    "dotenv": "^16.4.5",
    "groq-sdk": "^0.7.0",
    "cors": "^2.8.5",
    "ws": "^8.17.1",  // ✅ Añadido para WebSocket
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "nodemon": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "bot.js",
    "public/",
    "services/",
    "config/",
    "utils/",
    "commands/",
    "data/",
    ".env.example",
    "README.md"
  ],
  "keywords": [
    "discord",
    "bot",
    "ai",
    "groq",
    "chatbot",
    "discord.js",
    "knowledge-base",
    "wikipedia",
    "quotes",
    "artificial-intelligence"
  ],
  "author": "Tu Nombre",
  "license": "MIT"
}
